html, body
  height 100%
  min-height 100%
  margin 0

  .board 
    margin 2em
    
    #p1-grid-table
      background blue
      border 2px solid gold  
      td
        height 3em
        width 3em
        border 1px solid silver
        text-align center

.BlackTriangle
  position absolute
  height 50%
  left 0
  top 0
  width 50%
  overflow hidden

.BlackTriangle-inner
  position absolute
  top 50%
  left 50%
  width 27.2px
  height 27.2px
  margin-top -138.6px
  margin-left -138.6px
  border-radius 100%
  &:before
    position absolute
    z-index 1
    top 50%
    left 50%
    margin-top -136px
    margin-left -120px
    content ""
    width 0
    height 0
    border-style solid
    border-width 0 120px 207.8px 120px
    border-color transparent transparent #000 transparent

