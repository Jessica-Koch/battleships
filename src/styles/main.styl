html, body
  height 100%
  min-height 100%
  margin 0
  h2
    text-align center
  .board 
    position relative
    -webkit-display flex
    -moz-display flex
    -ms-display flex
    -o-display flex
    display flex
    -webkit-justify-content center
    -moz-justify-content center
    -ms-justify-content center
    -o-justify-content center
    justify-content center
    #score
      .alive
        color lime
    #messageArea
      color rgb(83, 175, 19)
      position absolute 
      top 0px
      left 10px
    #p1-grid-table
      margin 2em
      background blue
      border 2px solid gold  
      td
        height 3em
        width 3em
        border 1px solid silver
        text-align center
        cursor pointer
      td.hit
        background tomato
      td.miss
        background #00cccc
      td.sunk
        background red